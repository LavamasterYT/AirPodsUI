<Window x:Class="AirPodsUI.Toast.PencilToast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="true"
        Background="Transparent"
        Loaded="OnToastLoaded"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        SizeToContent="Width"
        Title="Pencil" Height="50" MinWidth="175">
    <Border CornerRadius="27" x:Name="tToast" Background="White">
        <Grid>
            <Image RenderOptions.BitmapScalingMode="HighQuality" x:Name="tIcon" HorizontalAlignment="Left" Width="30" Height="30" Margin="15 5 5 5" Grid.Column="0"/>
            <StackPanel HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" Margin="45 0 35 0">
                <TextBlock TextAlignment="Center" x:Name="tDeviceName" Text="null" FontFamily="pack://application:,,,/Fonts/#SF Pro" FontSize="12" FontWeight="Bold"/>
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Text="Connected" FontFamily="pack://application:,,,/Fonts/#SF Pro Display" Foreground="Gray" FontSize="12"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
